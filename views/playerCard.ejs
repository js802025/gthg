  <main class="text-center mt-auto">
    <h1><%= player.displayName%></h1>
    <p class="lead">Statistics</p>
  </main>
  <div class="container justify-content-center mb-auto">
  <div class="row mx-auto text-center">
   <div class="col">
     <h1 class="display-1"><%= statistics.games_won%></h1><br>
     <h4>Games Won</h4>
     </div>
     <div class="col">
     <h1 class="display-1"><%= statistics.games_played%></h1><br>
       <h4>Games Played</h4>
     </div>
       <div class="col">
     <h1 class="display-1"><%= ordinal_suffix_of(statistics.top_place)%></h1><br>
         <h4>Top Place</h4>
     </div>
  </div>
    <div class="row mt-4 mx-auto text-center">
   <div class="col">
     <h1 class="display-1"><%= statistics.most_turtles_found%></h1><br>
     <h4>Most Turtles Found</h4>
     </div>
     <div class="col">
     <h1 class="display-1"><%= statistics.turtles_found%></h1><br>
       <h4>Turtles Found</h4>
     </div>
       <div class="col">
     <h1 class="display-1"><%= statistics.ws_rank%></h1><br>
         <h4>Wit and Skill Score</h4>
     </div>
  </div>
    <div class="row mx-auto mt-4">
      <div class="col">
        <h3>Badges:</h3>
        <p class="lead"><% for (var badge of statistics.badges) { %>
        <%= badge%><br>
      <%  }%></p>
      </div>
      <div class="col">
        <h3>Player Card:</h3>
        <img class=" d-block mx-auto" src="<%= player.photoURL%>"><h3 class="text-center mt-2"><%=player.displayName%></h3><p class="lead text-center"><%=player.email%></p>
