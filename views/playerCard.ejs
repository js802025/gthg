  <body class="d-flex h-100 text-white bg-dark">

<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column ">
  <header class="mb-auto">
    <div>
      <a href="/" class="text-reset text-decoration-none"><h3 class="float-md-start mb-0">GTHG</h3></a>
      <nav class="nav nav-masthead justify-content-center float-md-end ">
        <!-- Button trigger modal -->
        <button type="button" class="btn pl-4 text-light" style="background-color: #FA321D"data-toggle="modal" data-target="#exampleModalCenter">
          Report a Turtle
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered justify-content-center" role="document">
            <div class="modal-content bg-dark" >
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Report a Turtle</h5>
              </div>
              <div class="modal-body">
                <form data-bind="submit: report" autocomplete="off">
  <div class="form-group">
    <label for="turtle">Turtle ID Number</label>
    <input type="text" class="form-control" id="turtle" data-bind="value: turtleid" aria-describedby="emailHelp" placeholder="Enter ID">
    <small id="emailHelp" class="form-text text-muted">This is the number displayed on the shell of the turtle.</small>
  </div>
  <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Submit</button>
</form>
              </div>
            </div>
          </div>
        </div>
